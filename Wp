    <script>
        // Elementos
        const toggle = document.getElementById('darkModeToggle');
        const body = document.body;

        // Função para ativar o Dark Mode
        toggle.addEventListener('change', (e) => {
            if(e.target.checked) {
                body.classList.add('dark-mode');
            } else {
                body.classList.remove('dark-mode');
            }
        });

        // Efeitinho de clique na Tab Bar (para parecer real)
        const tabs = document.querySelectorAll('.tab-item');
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active')); // Remove dos outros
                tabs.forEach(t => t.querySelector('ion-icon').name = t.querySelector('ion-icon').name.replace('-outline', '') + '-outline'); // "Despreeche" os icones
                
                // Ativa o atual
                tab.classList.add('active');
                
                // Troca ícone para preenchido (estilo iOS)
                const icon = tab.querySelector('ion-icon');
                let iconName = icon.getAttribute('name');
                if(iconName.includes('-outline')) {
                    icon.setAttribute('name', iconName.replace('-outline', ''));
                }
            });
        });
    </script>
